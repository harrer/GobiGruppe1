<window width="800px" border="normal" apply="org.zkoss.bind.BindComposer"
        title="ProSAS" height="800px" viewModel="@id('vm') @init('de.lmu.ifi.bio.splicing.zkoss.ViewModel')">
    <hbox id="main">
        <vbox width="140px" id="left">
            <hbox align="center">
                Keyword:
                <textbox value="@bind(vm.keyword)"/>
                <vbox>
                    <button id="searchButton" label="Search" onClick="@command('search')"/>
                    <button id="submitButton" label="Submit" onClick="@command('add')"/>
                </vbox>
            </hbox>
            <listbox id="searchListbox" width="200px" rows="20" emptyMessage="No gene etc. found"
                     model="@bind(vm.searchlist)"
                     multiple="true" checkmark="true" selectedItems="@bind(vm.selectedSearchList)">
                <listhead>
                    <listheader label="Entity"/>
                </listhead>
            </listbox>
        </vbox>
        <listbox id="detailedview" model="@bind(vm.gridlist)" rows="23" checkmark="true">
            <listhead>
                <listheader label="I1"/>
                <listheader label="I2"/>
                <listheader label="Start"/>
                <listheader label="Stop"/>
                <listheader label="Type"/>
                <listheader label="Pattern"/>
                <listheader label="SEC"/>
                <listheader label="ACC"/>
            </listhead>
            <template name="model">
                <listitem>
                    <listcell label="${each.i1}"/>
                    <listcell label="${each.i2}"/>
                    <listcell label="${each.start}"/>
                    <listcell label="${each.stop}"/>
                    <listcell label="${each.type}"/>
                    <listcell label="${each.pattern}"/>
                    <listcell label="${each.sec}"/>
                    <listcell label="${each.acc}"/>
                </listitem>
            </template>
        </listbox>
    </hbox>
</window>